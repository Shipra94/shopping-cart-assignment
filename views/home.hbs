<section class="banner-wrapper">
    <div class="home-slider">
        <div class="home-slider-offers">
            {{#each banners}}
            <div class="mySlides fade">
                <img class="image-width" src="{{this.bannerImageUrl}}"
                    alt="{{this.bannerImageAlt}}">
            </div>
            {{/each}}
            <a class="prev" onClick="plusSlides(-1)" tabindex="0">prev</a>
            <a class="next" id="next" onClick="plusSlides(1)" tabindex="0">next</a>
            <div class="dots">
                {{#each banners}}
                <span class="dot" onclick="currentSlide({{ @index}})" tabindex="0"></span>
                {{/each}}
            </div>

        </div>
    </div>
    <div class="category-wrapper">
        {{#each categories}}
            {{#if this.enabled}}
                 <section class="category-section">
                    <div class="category">
                        <img class="category-image" src="{{this.imageUrl}}" alt="{{this.name}}" align="middle">
                    </div>
                    <div class="category-desc">
                        <h1 class="category-heading" tabindex="0">{{this.name}}</h1>
                        <p class="category-text" tabindex="0">{{this.description}}</p>
                        <div class="button-align"><button class="category-button"><a class="filter" href="/products/{{this.id}}">Explore {{this.name}}</a></button></div>
                    </div>
                </section>
            {{/if}}
        {{/each}}
    </div>
</section>